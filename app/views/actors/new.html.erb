<h1>Crea un Actor nuevo</h1>

<% if @errors %>
<ul>
<% @errors.each do |error| %>
<li><%= error %></li>
<% end %>
</ul>
<% end %>

<ul>
<%= form_for @actor do |f| %>
  <li><%= f.label "Nombre" %>
  <%= f.text_field :name %></li>
  <li><%= f.label "Biografia" %>
  <%= f.text_field :bio %></li>
  <li><%= f.label "Fecha de Nacimiento" %>
  <%= f.date_field :birth_date %></li>
  <li><%= f.label "Lugar de Nacimiento" %>
  <%= f.text_field :birth_place %></li>
  <li><%= f.label "URL de imagen" %>
  <%= f.text_field :image_url %></li>
  <li><%= f.label "Esta vivo?" %>
  <%= f.check_box :alive, {}, true, false %></li>
  <li><%= f.label "Fecha de Fallecimiento" %>
  <%= f.date_field :death_date %></li>
  <li><%= f.label "Lugar de Fallecimiento" %>
  <%= f.text_field :death_place %></li>
  <li><%= f.submit %></li>
<% end %>
</ul>
